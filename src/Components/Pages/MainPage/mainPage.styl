@import "../../../StylusCSS/mixins"
@import "../../../StylusCSS/colors"

.header
  height: 625px;
  background: url(/images/header-bg.jpg) 50% 0 no-repeat;
  @media (min-width: 768px)
    height: 734px;


.header__logo
  margin-top: 60px;
  width 290px
  height 65px
  background-image: url(/images/main_logo.png);
  background-size: 290px 65px;
  background-repeat: no-repeat;
  background-position: 0 0;
  @media (min-width: 576px)
    margin-top: 90px;
    float: left;


.header__phone
  margin-top: 15px;
  @media (min-width: 576px)
    margin-top: 80px;
    float: right;


.header__phone-number
  font-size: 24px;
  color: #FFF;
  box-shadow: 0 0 10px #242733;


.header__title
  position: relative;
  @media (min-width: 576px)
    margin-top: 230px;

  &:before
    display none
    position: absolute;
    vertical-align: baseline
    bottom: -235px;
    left: 521px;
    width: 235px;
    height: 234px;
    background-position: -300px 0;
    content: ''
    background-image: url(/images/icons.png)
    @media (min-width: 995px)
      display block


.header-title__line1
  font-size: 28px;
  font-weight: 700;
  display: block;
  padding: 0 3px;
  color: #fff;
  background: main-color;
  @media (min-width: 768px)
    background: none;
    padding 0


.header-title__line2
  font-size: 28px;
  display: block;
  padding: 0 3px;
  color: #242733;
  background: #ffd500;
  margin-top: 3px;
  @media (min-width: 768px)
    font-size: 50px;
    font-weight: 900;
    line-height: 1;


.header-title__line3
  font-size: 28px;
  display: block;
  margin-top: 3px;
  padding: 0 3px;
  color: #fff;
  background: #242733;
  @media (min-width: 768px)
    font-size: 50px;
    font-weight: 900;
    line-height: 1;

.header__text
  font-size: 18px;
  display: inline-block;
  margin-bottom: 30px;
  padding: 4px 8px;
  color: #fff;
  background: #242733;
  @media (min-width: 768px)
    font-size: 24px;

.which__title
  text-align center
  @media (min-width: 576px)
    text-align left

.which__list
  font-size: 18px

  & ul
    & li
      margin-bottom 15px
      @media (min-width: 576px)
        margin-bottom 25px
    @media (min-width: 576px)
      padding-left 60px

  @media (min-width: 576px)
    font-size: 24px;

.header__button
  width: 100%;
  @media (min-width: 576px)
    width: 310px;



.logo--white
  color: #fff;

  &:before
    background-position: -50px 0;


.which {
  padding-bottom: 40px;
}


.which__manufacturers
  margin-bottom: 15px;
  @media (min-width: 775px)
    margin-bottom: 35px;


.manufacturers__title
  position: relative;
  margin-bottom: 25px;
  margin-left: 20px;
  padding: 2px 10px;
  background: #f6f6f6;

  &:before
    position: absolute;
    top: 0;
    left: -20px;
    width: 5px;
    height: 100%;
    content: '';
    background: #241a01;

.clients__list
  margin-top 10px

.clients__list
.manufacturers__images
  flex()

  & img
    margin 5px 10px 5px 10px;
    @media (min-width: 955px)
      margin 0

.consultation
  height: 585px;
  background: url(/images/consultation-bg.jpg) 50% -7% no-repeat;
  @media (min-width: 768px)
    height: 585px;
    background: url(/images/consultation-bg.jpg) 50% 100% no-repeat;


.consultation__form
  width 100%
  @media (min-width: 575px)
    width 575px
  & .success__message
    color: #fff
    background-color: rgb(36, 39, 51);
    padding: 4px 8px;
    font-size: 18px;
    line-height: 20px;
    box-sizing: border-box;
    @media (min-width: 575px)
      width 575px
      font-size: 24px;

.consultation__up {
  display: block;
  width: 56px;
  height: 56px;
  margin: 10px auto 0;
  text-indent: -9999px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .1);
  background-position: -100px 0;
}

.consultation__up:hover {
  background-color: rgba(255, 255, 255, .3);
}

.list__item__link
  text-decoration unset
