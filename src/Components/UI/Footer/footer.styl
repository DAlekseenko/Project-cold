@import "../../../StylusCSS/colors"
@import "../../../StylusCSS/mixins"

.footer
  flex()
  padding-left 10px
  padding-right 10px
  color #fff
  background main-color
  @media (min-width: 960px)
    width 960px
    margin auto

.cp
  margin-top 10px
  margin-bottom 10px
  @media (min-width: 575px)
    margin-bottom 20px

.footer__info
  font-size 28px
  margin-bottom 20px
  @media (min-width: 575px)
    margin-top 20px

.footer__info:first-child
  margin-top 20px

.footer__copy
  margin-left 10px

.social
  width 50px
  height 50px
  background-color white
  icons(-100px, -50px)

